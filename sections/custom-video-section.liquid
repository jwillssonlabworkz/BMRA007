<div class="video-background">
  {% if section.settings.video_url %}
    <video autoplay muted loop>
      <source src="{{ section.settings.video_url }}" type="video/mp4">
      Your browser does not support the video tag.
    </video>
  {% endif %}
  <div class="content">
    <h2 class="banner__heading inline-richtext h0">{{ section.settings.heading }}</h2>
    <p class="custom-video-section-p">{{ section.settings.description }}</p>
    <div class="custom-html">{{ section.settings.custom_html }}</div>
  </div>
</div>

<style>
    .video-background {
        position: relative;
        /* width: 1423px; /* Set width to 1423 pixels */ */
        height: 800px; /* Set height to 800 pixels */
        overflow: hidden;
        margin: 0 auto; /* Center the section */
    }


   .content .custom-video-section-p {
      width: 75%;
      color: #00205b;
      font-size: 20px !important;
      line-height: 27px;
      font-weight: 400;
  }

    video {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 100%;
        height: 100%;
        z-index: 1;
        transform: translate(-50%, -50%);
        object-fit: cover; /* Ensures the video covers the section */
    }

    .content {
        position: relative;
        z-index: 2;
        text-align: center; /* Center alignment */
        color: white; /* Adjust the text color as needed */
        padding: 20px;
    }

    .content h2,
    .content p,
    .content .custom-html {
        margin: 0; /* Remove default margins */
    }

    /* Responsive alignment adjustments */
    @media (min-width: 768px) {
        .content {
            text-align: left; /* Left alignment for larger screens */
            padding: 20px 40px; /* Increased padding for larger screens */
        }

        .content h2 {
            font-size: 2.5rem; /* Adjust heading size */
        }


    }
</style>

{% schema %}
{
    "name": "Video Background",
    "settings": [
        {
            "type": "url",
            "id": "video_url",
            "label": "Video URL"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Your Heading"
        },
        {
            "type": "textarea",
            "id": "description",
            "label": "Description",
            "default": "Your description goes here."
        },
        {
            "type": "textarea",
            "id": "custom_html",
            "label": "Custom HTML",
            "default": "Add your custom HTML here."
        }
    ],
    "presets": [
        {
            "name": "Video Background",
            "category": "Custom"
        }
    ]
}
{% endschema %}
