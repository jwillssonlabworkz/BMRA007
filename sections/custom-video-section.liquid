<div class="video-background">
  {% if section.settings.video_url %}
    <video autoplay muted loop>
      <source src="{{ section.settings.video_url }}" type="video/mp4">
      Your browser does not support the video tag.
    </video>
  {% endif %}
  <div class="content">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.description }}</p>
    <div class="custom-html">{{ section.settings.custom_html }}</div>
  </div>
</div>

<style>
  .video-background {
      position: relative;
      overflow: hidden;
  }

  video {
      width: 100%;
      height: auto;
      position: absolute;
      top: 50%;
      left: 50%;
      min-width: 100%;
      min-height: 100%;
      width: auto;
      height: auto;
      z-index: 1;
      transform: translate(-50%, -50%);
  }

  .content {
      position: relative;
      z-index: 2;
      text-align: center;
      color: white; /* Adjust the text color as needed */
      padding: 20px;
  }
</style>

{% schema %}
{
    "name": "Video Background",
    "settings": [
        {
            "type": "url",
            "id": "video_url",
            "label": "Video URL"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Your Heading"
        },
        {
            "type": "textarea",
            "id": "description",
            "label": "Description",
            "default": "Your description goes here."
        },
        {
            "type": "textarea",
            "id": "custom_html",
            "label": "Custom HTML",
            "default": "Add your custom HTML here."
        }
    ],
    "presets": [
        {
            "name": "Video Background",
            "category": "Custom"
        }
    ]
}
{% endschema %}
